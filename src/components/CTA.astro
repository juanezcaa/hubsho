<style>
  .cta {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: white;
  }

  .cta-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-text {
    text-align: center;
    margin-bottom: calc(var(--spacing-unit) * 6);
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: calc(var(--spacing-unit) * 2);
