        <div class="mt-8 flex flex-col gap-3 sm:flex-row sm:items-center">
          <a
            href="#demo"
            class="inline-flex items-center justify-center rounded-xl bg-blue-600 px-6 py-3 text-sm font-semibold text-white shadow-[0_12px_30px_rgba(37,99,235,0.25)] hover:bg-blue-700"
