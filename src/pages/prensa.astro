---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

/**
 * Página: Prensa
 * - Solo contenido institucional (eventos + publicaciones)
 * - Listo para que agregues 2–3 eventos y 2 publicaciones (puedes añadir más).
 * - Coloca las imágenes en /public/prensa/...
 *   Ej: /public/prensa/evento-1/01.jpg  => se usa como "/prensa/evento-1/01.jpg"
 */

const events = [
  {
    title: "Nombre del evento 1",
    date: "2025",
    location: "Ciudad, País",
    summary:
      "Breve descripción del evento y por qué fue relevante. 2–3 líneas máximo para que se vea limpio.",
    photos: [
      { src: "/prensa/evento-1/01.jpg", alt: "Hubsho en evento 1 - foto 1" },
      { src: "/prensa/evento-1/02.jpg", alt: "Hubsho en evento 1 - foto 2" },
      { src: "/prensa/evento-1/03.jpg", alt: "Hubsho en evento 1 - foto 3" },
    ],
  },
  {
    title: "Nombre del evento 2",
    date: "2024",
    location: "Ciudad, País",
    summary:
      "Breve descripción del evento. Enfócate en el contexto: industria, networking, aprendizaje, presencia de marca.",
    photos: [
      { src: "/prensa/evento-2/01.jpg", alt: "Hubsho en evento 2 - foto 1" },
      { src: "/prensa/evento-2/02.jpg", alt: "Hubsho en evento 2 - foto 2" },
    ],
  },
  {
    title: "Nombre del evento 3",
    date: "2024",
    location: "Ciudad, País",
    summary:
      "Descripción breve del evento 3. Si solo tienes 2 eventos, borra este bloque completo.",
    photos: [
      { src: "/prensa/evento-3/01.jpg", alt: "Hubsho en evento 3 - foto 1" },
      { src: "/prensa/evento-3/02.jpg", alt: "Hubsho en evento 3 - foto 2" },
    ],
  },
];

const publications = [
  {
    title: "Título de la publicación / nota",
    outlet: "Nombre de la revista o medio",
    date: "2025",
    excerpt:
      "Extracto corto (1–2 líneas) sobre el enfoque del artículo o mención. Sin exagerar, institucional.",
    cover: { src: "/prensa/publicacion-1/cover.jpg", alt: "Portada publicación 1" },
    link: "#", // pon la URL real si existe
  },
  {
    title: "Título de la publicación / entrevista",
    outlet: "Nombre de la revista o medio",
    date: "2024",
    excerpt:
      "Extracto corto sobre el contenido. Si no hay link, deja '#' y el botón se desactiva visualmente.",
    cover: { src: "/prensa/publicacion-2/cover.jpg", alt: "Portada publicación 2" },
    link: "#",
  },
];
---

<Layout title="Prensa | Hubsho" description="Eventos, apariciones y publicaciones donde participa Hubsho.">
  <Header />

  <main class="bg-white">
    <!-- HERO -->
    <section class="relative pt-40 md:pt-44 pb-16 bg-gradient-to-br from-gray-50 via-white to-white overflow-hidden">
      <div class="absolute -top-24 -right-24 w-80 h-80 rounded-full bg-blue-600/10 blur-3xl"></div>
      <div class="absolute -bottom-28 -left-28 w-80 h-80 rounded-full bg-blue-600/10 blur-3xl"></div>

      <div class="max-w-7xl mx-auto px-6">
        <div class="max-w-4xl">
          <p class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 bg-white/70 border border-gray-200 rounded-full px-4 py-2">
            <span class="w-2 h-2 rounded-full bg-blue-600"></span>
            Prensa y eventos
          </p>

          <h1 class="mt-6 text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 tracking-tight leading-[1.05]">
            Presencia, participación y publicaciones
          </h1>

          <p class="mt-6 text-lg md:text-xl text-gray-600 leading-relaxed max-w-3xl">
            Una selección de eventos donde hemos participado y menciones en medios y revistas.
            Aquí puedes conocer parte de nuestra historia pública y la evolución de la marca.
          </p>
        </div>
      </div>
    </section>

    <!-- EVENTOS -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6">
          <div class="max-w-3xl">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Eventos</h2>
            <p class="mt-4 text-lg text-gray-600">
              Participaciones recientes en encuentros de industria, tecnología y comercio.
            </p>
          </div>
        </div>

        <div class="mt-12 space-y-10">
          {events.map((e) => (
            <article class="rounded-3xl border border-gray-200 bg-white shadow-sm overflow-hidden">
              <div class="p-8 md:p-10">
                <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
                  <div class="max-w-3xl">
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900">{e.title}</h3>
                    <p class="mt-2 text-gray-600">
                      <span class="font-semibold text-gray-900">{e.date}</span>
                      <span class="mx-2 text-gray-300">•</span>
                      <span>{e.location}</span>
                    </p>
                    <p class="mt-5 text-gray-700 leading-relaxed">
                      {e.summary}
                    </p>
                  </div>

                  <div class="flex-shrink-0">
                    <div class="inline-flex items-center gap-2 rounded-full bg-gray-50 border border-gray-200 px-4 py-2 text-sm text-gray-700">
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7h3l2-2h8l2 2h3v12H3V7z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11a3 3 0 100 6 3 3 0 000-6z" />
                      </svg>
                      {e.photos.length} fotos
                    </div>
                  </div>
                </div>

                <!-- Galería -->
                <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                  {e.photos.map((p) => (
                    <figure class="rounded-2xl border border-gray-200 bg-gray-50 overflow-hidden">
                      <img
                        src={p.src}
                        alt={p.alt}
                        loading="lazy"
                        class="w-full h-64 object-cover"
                      />
                    </figure>
                  ))}
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- PUBLICACIONES -->
    <section class="py-20 bg-gradient-to-br from-gray-50 to-white border-t border-gray-100">
      <div class="max-w-7xl mx-auto px-6">
        <div class="max-w-3xl">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Publicaciones</h2>
          <p class="mt-4 text-lg text-gray-600">
            Menciones y artículos donde se ha hablado de Hubsho o de nuestra visión de comercio digital.
          </p>
        </div>

        <div class="mt-12 grid md:grid-cols-2 gap-6">
          {publications.map((p) => {
            const disabled = !p.link || p.link === "#";
            return (
              <article class="rounded-3xl border border-gray-200 bg-white shadow-sm overflow-hidden hover:shadow-lg transition-shadow">
                <div class="grid sm:grid-cols-12">
                  <div class="sm:col-span-4 bg-gray-50 border-b sm:border-b-0 sm:border-r border-gray-200">
                    <img
                      src={p.cover.src}
                      alt={p.cover.alt}
                      loading="lazy"
                      class="w-full h-56 sm:h-full object-cover"
                    />
                  </div>

                  <div class="sm:col-span-8 p-7 md:p-8">
                    <div class="flex items-center gap-2 text-sm text-gray-600">
                      <span class="font-semibold text-gray-900">{p.outlet}</span>
                      <span class="text-gray-300">•</span>
                      <span>{p.date}</span>
                    </div>

                    <h3 class="mt-3 text-xl md:text-2xl font-bold text-gray-900">
                      {p.title}
                    </h3>

                    <p class="mt-3 text-gray-700 leading-relaxed">
                      {p.excerpt}
                    </p>

                    <div class="mt-6">
                      <a
                        href={p.link}
                        class={`inline-flex items-center gap-2 px-5 py-3 rounded-xl font-semibold transition-colors ${
                          disabled
                            ? "bg-gray-100 text-gray-400 cursor-not-allowed pointer-events-none"
                            : "bg-blue-600 text-white hover:bg-blue-700"
                        }`}
                      >
                        Ver publicación
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Nota final (opcional, institucional) -->
    <section class="py-16 bg-white border-t border-gray-100">
      <div class="max-w-7xl mx-auto px-6">
        <div class="rounded-3xl border border-gray-200 bg-gray-50 p-8 md:p-10">
          <h3 class="text-xl md:text-2xl font-bold text-gray-900">Material de prensa</h3>
          <p class="mt-3 text-gray-600 leading-relaxed max-w-3xl">
            Si necesitas logotipos, capturas o información para notas y publicaciones,
            puedes centralizarlo aquí o enlazar a un kit de marca (media kit) cuando esté listo.
          </p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
